<section class="header-static">
  <div class="inner">
    <header>
      <h2>My Subscriptions</h2>
    </header>
  </div>
</section>

<section class='section'>
  <div class="subscription-list">
    <div class="tabs">
      <div class="inner">
        <h3 class="current">GFW</h3>
        <h3>
          GFW Fires
          <span class="tooltipmap bottom">Coming Soon</span>
        </h3>
        <h3>
          Commodities
          <span class="tooltipmap bottom">Coming Soon</span>
        </h3>
      </div>
    </div>

    <div class="content-form user-subscriptions inner">
      {{#if subscriptions.length}}
        <table>
          <tbody id="user-subscriptions-table-body">
          </tbody>
        </table>
      {{else}}
        <div class="user-subscriptions-empty">
          <h4>You don't have any subscriptions yet</h4>
          <h5>
            Visit the map to subscribe to forest change alerts for your
            area of interest.
          </h5>

          <div class="user-subscriptions-how-to-subscribe"></div>

          <p>
            <a href="/map" class="btn green uppercase">Go to the map</a>
          </p>
        </div>
      {{/if}}
    </div>
  </div>
</section>
