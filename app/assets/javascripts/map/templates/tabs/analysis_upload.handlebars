{{#if availableFeatures.length}}
  <div class="dropable file-selected">
    <a href="#" id="cancel">Cancel</a>
    <header>
      <h2>
        {{#if multipleFeatures}}
          Select from {{availableFeatures.length}} features on the map, or
          analyse all
        {{else}}
          Review your geometry and run analysis
        {{/if}}
      </h2>
    </header>

    <p>
      <button id="continue" class="btn green uppercase">
        Analyse {{#if selectedFeatures.length}} {{selectedFeatures.length}} features{{/if}}
      </button>
    </p>
  </div>
{{else}}
  <div class="dropable">
    <div id="drop-shape" class="shape-droppable">Or drop a custom shapefile here</div>
    <a href='#' data-source="drop-shapefile" class='source'><svg><use xlink:href="#shape-info"></use></svg></a>
  </div>
{{/if}}
