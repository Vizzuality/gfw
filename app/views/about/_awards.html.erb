    {
      "img" => "/assets/backgrounds/awards1-5913fb0ec3579c57daf162e2c2cf9578.png",
      "url" => "http://events.esri.com/conference/sagList/"
    },
    {
      "img" => "/assets/backgrounds/awards-6a6e644041ba2cc42f22d16993122cfe.png",
      "url" => "http://www.unglobalpulse.org/big-data-climate-challenge-winners-announced"
    },
    {
      "img" => "/assets/backgrounds/awards2-2bd31f50ace42e4e1e7f8de2438a7d14.png",
      "url" => "http://www.socialtech.org.uk/projects/global-forest-watch/"
