    }
  ]
%>

<div class="c-about-awards">
  <div class="row">
    <div class="small-12 columns">
      <div class="c-about-awards__title text -title-xs -color-3">AWARDS</div>
      <div class="slider js_slider">
        <div class="frame js_frame">
          <ul class="slides js_slides">
            <% awards.each_with_index do |item, index| %>
              <li class="slide js_slide <% if index == 0 %>active<% end %>">
                <div class="c-about-awards-item">
                  <a target="_blank" href="<%= item['url'] %>">
                    <img src="<%= item['img'] %>">
                  </a>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
