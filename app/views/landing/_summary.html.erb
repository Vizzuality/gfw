<div class="c-home-summary">
  <div class="row">
    <div class="slider js_slider">
      <div class="frame js_frame">
        <ul class="slides js_slides">
          <% (0..3).each do |i| %>
            <li class="slide js_slide small-12 medium-6">
              <div class="c-home-summary-item slide js_slide">
                <div class="c-home-summary-item__title text -title -light -color-2">Be the first to know about deforestation</div>
                <div class="c-home-summary-item__paragraph text -paragraph -color-2">Get email notifications straight to your inbox as forest clearing happens with our subscription feature.</div>
                <div class="c-home-summary-item__button">
                  <%= render 'shared/buttons/regular', text: 'CREATE A SUBSCRIPTION', color: 'green' %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <div class="c-home-summary__arrow-button js_next next">
          <%= render 'shared/buttons/arrow', orientation: 'right' %>
        </div>
      </div>
      <div class="c-home-summary__slider-dots">
        <%= render 'shared/slider_dots', count: 3 %>
      </div>
    </div>
  </div>
</div>
